<Page x:Class="SorWpfApp.PageOrganizer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SorWpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="575" d:DesignWidth="1000"
      Title="PageOrganizer">

    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal" Width="750" Height="100" Margin="20" Background="#FF23359C">
            <StackPanel>
                <Label Content="Kategória"/>
                <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="2" Width="150" Height="25" HorizontalAlignment="Left" Margin="5"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Név"/>
                <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="2" Width="150" Height="25" HorizontalAlignment="Left" Margin="5"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Dátum"/>
                <DatePicker  IsTodayHighlighted="True" Margin="0,5,0,0" Height="30" VerticalAlignment="Center" Width="150" Text="asd"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Helyszín"/>
                <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="2" Width="150" Height="25" HorizontalAlignment="Left" Margin="5"/>
            </StackPanel>
            <Button Content="Hozzáadás" Width="95" Height="35" Margin="5,0,0,0" Style="{DynamicResource GeneralButton}" Background="Black" Foreground="Lime" BorderBrush="Lime"/>

        </StackPanel>

        <StackPanel Width="750" Height="110" Margin="20" Background="#FFCE8600">
            <Label Content="Race" FontSize="20" FontWeight="Bold" FontStyle="Italic"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Grand Prix # 1" Grid.Column="0" FontSize="15"/>
                <Label Content="2025. 05. 11" Grid.Column="1" FontSize="15"/>
                <Label Content="America" Grid.Column="2" FontSize="15"/>
                <Label Content="Aktív" Grid.Column="3" FontSize="17" FontStyle="Italic" FontWeight="DemiBold"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Törlés" Width="150" Height="25" Margin="0,5,0,0" Grid.Column="0" Style="{DynamicResource GeneralButton}" Background="#FFB40000" Foreground="White"/>
                <Button Content="Szerkesztés" Width="150" Height="25" Margin="0,5,0,0" Grid.Column="1" Style="{DynamicResource GeneralButton}" Background="#FF1E8A00" Foreground="White"/>
                <Button Content="Deaktiválás" Width="150" Height="25" Margin="0,5,0,0" Grid.Column="2" Style="{DynamicResource GeneralButton}" Background="#FF5F1515" Foreground="White"/>
            </Grid>

        </StackPanel>
    </StackPanel>
</Page>
